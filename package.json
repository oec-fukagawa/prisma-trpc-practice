{
  "name": "prisma-trpc-practice",
  "description": "Prisma + tRPC のプラクティスを模索するためのリポジトリ",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "functions/*",
    "packages/*"
  ],
  "scripts": {
    "dep:graph": "depcruise --output-type dot . | dot -T svg -o docs/images/dependency-graph.svg"
  },
  "devDependencies": {
    "dependency-cruiser": "^17.0.1"
  }
}
